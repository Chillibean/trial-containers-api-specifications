{
  "type": "object",
  "description": "The workflow state with forms",
  "properties": {
    "forms": {
      "type": "array",
      "items": {
        "type": "object",
        "description": "The form",
        "properties": {
          "created_at": {
            "type": "string",
            "description": "The created at date",
            "example": "2025-01-15T12:00:00.000Z"
          },
          "has_comments": {
            "type": "boolean",
            "description": "The comments indicator"
          },
          "id": {
            "type": "integer",
            "description": "The form id",
            "example": 1
          },
          "title": {
            "type": "string",
            "description": "The form title",
            "example": "Patient Review"
          },
          "version_number": {
            "type": "integer",
            "description": "The form version number",
            "example": 1
          }
        },
        "additionalProperties": false,
        "required": [
          "created_at",
          "has_comments",
          "id",
          "title",
          "version_number"
        ]
      }
    },
    "name": {
      "type": "string",
      "description": "The workflow state name",
      "enum": [
        "In Draft",
        "In Review",
        "Completed",
        "Rejected"
      ]
    },
    "options": {
      "type": "object",
      "description": "The workflow state options",
      "properties": {
        "can_add_comments": {
          "type": "boolean",
          "description": "Should user be able to add comments to form"
        },
        "deletable": {
          "type": "boolean",
          "description": "Should user be able to delete a form"
        },
        "editable": {
          "type": "boolean",
          "description": "Should user be able to edit a form"
        }
      },
      "additionalProperties": false,
      "required": [
        "can_add_comments",
        "deletable",
        "editable"
      ]
    },
    "type": {
      "type": "string",
      "description": "The workflow state type",
      "enum": [
        "initial",
        "in-progress",
        "final",
        "rejected"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "forms",
    "name",
    "options",
    "type"
  ]
}
